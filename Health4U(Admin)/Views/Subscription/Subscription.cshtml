@model DataLibrary.Models.Billings

@{
    ViewBag.Title = "Subscriptions";
}
<script src="~/Scripts/10.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap-3.3.6-dist/js/bootstrap.js"></script>
<!---SweetAlert--->
<!---SweetAlert--->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
>

<script type="text/javascript">
    function validateData() {

        if ($("#SubscribeMonth").val() < 0) {
            swal("Invalid Subscribe Month!");
            return false;
        } else if ($("#SubscribeMonth").val() == "") {
            swal("Please enter valid subscribe month !");
            return false;
        } else if ($("#SubscribeMonth").val() == 0) {
            swal("Subscribe Month cannot be 0 !");
            return false;
        } else {
            return true;
        }
    }

    function Validate(ctl, event) {
        event.preventDefault();
        swal({
            title: "Do you want to add a billing?",
            text: "Please check information before adding !",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#008000",
            confirmButtonText: "Add",
            cancelButtonText: "Cancel",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                    if (isConfirm) {
                    if (validateData() == true) {
                        $("#CreateForm").submit();
                    }
                } else {
                    swal("Cancelled", "You have Cancelled an adding action!", "error");
                }
            });
    }
</script>


@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "CreateForm"
}))
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:230%">
                            <h1 class="mt-3">Add Billing</h1>
                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="get">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Bill Date</label>
                                    <div class="col-sm-3">
                                        @Html.TextBoxFor(x => x.BillDate, "{0:yyyy-MM-ddTHH:mm:ss}", new
                                                             {@class = "form-control",@type = "datetime-local" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Corporate ID</label>
                                    <div class="col-sm-2">
                                        @Html.DropDownListFor(model => model.CorporateID, (SelectList)ViewBag.CorporateList, new { style = "height: 33px;" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">PackageID</label>
                                    <div class="col-sm-2">
                                        @Html.DropDownListFor(model => model.PackageID, (SelectList)ViewBag.PackageList, new { style = "height: 33px;" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">SubscribeMonth</label>
                                    <div class="col-sm-2">
                                        @Html.EditorFor(model => model.SubscribeMonth, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SubscribeMonth)
                                    </div>
                                </div>
                            </form>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <br />


                                    <button class="btn btn-dark" id="btnCreate" onclick="Validate(this, event);" 
                                            style="text-align:center;margin-left: 400px;" type="submit">Add</button>

                                    <button class="btn btn-danger" style="text-align:center;margin-left: 70px;" type="reset">Reset</button>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
