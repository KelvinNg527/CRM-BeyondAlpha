@model IEnumerable<DataLibrary.Models.ProjectModel>



<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-3">Task Overview</h1>
                <ol class="breadcrumb mb-4"></ol>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        PROJECT
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Project ID</th>
                                    <th>Project Title</th>
                                    <th>Progress (%)</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_ID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_Desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_Progress)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_Status)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", "Project", routeValues: new { id = item.project_ID })">
                                                <button type="button" class="btn btn-outline-dark">
                                                    <span class="fa fa-eye"></span>
                                                </button>
                                            </a>
                                            <a href="@Url.Action("EditDetails", "Project", routeValues: new { id = item.project_ID })">
                                                <button type="button" class="btn btn-outline-dark">
                                                    <span class="fa fa-edit"></span>
                                                </button>
                                            </a>
                                        </div>
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>

    </div>
</div>
<!-- /.card -->
<!-- /.container-fluid -->
<!-- jQuery -->
<script src="~/Assets/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

