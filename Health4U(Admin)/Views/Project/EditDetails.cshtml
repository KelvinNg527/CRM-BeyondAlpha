@model DataLibrary.Models.ProjectModel


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

@using (Html.BeginForm("EditDetails", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            @Html.DisplayFor(model => model.project_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.HiddenFor(model=>model.project_ID)
                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Description</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.project_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Title</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.project_Title, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Start Dates</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.project_StartDate, new { @Value = Model.project_StartDate.ToString("yyyy/MM/dd"), @class = "datepicker" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">End Date</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.project_EndDate,
                                            new { @Value = Model.project_EndDate.ToString("yyyy/MM/dd"), @class="datepicker" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Status</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.project_Status, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Progress</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.project_Progress, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Edit</button>
                                    </div>


                                </div>
                            </form>
  
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
