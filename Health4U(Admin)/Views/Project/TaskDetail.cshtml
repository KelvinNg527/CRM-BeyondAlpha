@model DataLibrary.Models.ProjectModel


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/chosen/1.1.0/chosen.css">
<script src="https://cdn.jsdelivr.net/chosen/1.1.0/chosen.jquery.js"></script>

@using (Html.BeginForm("TaskDetail", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            @Html.DisplayFor(model => model.task_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.HiddenFor(model => model.task_ID)
                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Title</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.task_Title, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Status</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.task_Status, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Member ID</label>
                                    <div class="col-sm-10" >
                                        @Html.DropDownListFor(model => model.task_MemberID, (SelectList)ViewBag.adminList, new { @class = "form-control chosen-select", style = "width: 220px;" })


                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Manager ID</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(model => model.task_ManagerID, (SelectList)ViewBag.adminList, new { @class = "form-control chosen-select", style = "width: 220px;" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <br />
                                        <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Edit</button>
                                    </div>


                                </div>
                            </form>

                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}

<script>
    $('.chosen-select').chosen();

</script>