@model IEnumerable<DataLibrary.Models.Rewards>


@{
    ViewBag.Title = "ViewRewards";
}

<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
<link href="~/Assets/css/styles2.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>


<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-3">Rewards</h1>
                <ol class="breadcrumb mb-4"></ol>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        View Rewards
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Rewards ID</th>
                                    <th>Description</th>
                                    <th>Note</th>
                                    <th>Blood Type</th>
                                    <th>Is Active</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RewardID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Note)
                                    </td>
                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BloodTypeCb)
                                    </td>

                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            @Html.Encode("True")
                                        }
                                        @if (item.IsActive == false)
                                        {
                                            @Html.Encode("False")
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("RDetails", "Rewards", routeValues: new { id = item.RewardID })">
                                                <button type="button" class="btn btn-outline-dark">
                                                    <span class="fa fa-edit"></span>
                                                </button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                         </table>
                    </div>
                </div>
            </div>

        </main>

    </div>
</div>
<!-- /.card -->
<!-- /.container-fluid -->
<!-- jQuery -->
<script src="~/Assets/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- AdminLTE App -->
<!-- AdminLTE for demo purposes -->
<!-- Page specific script -->
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>


