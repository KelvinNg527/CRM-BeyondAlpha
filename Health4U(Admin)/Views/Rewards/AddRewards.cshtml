
@{
    ViewBag.Title = "Details";
}
<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <section class="panel">
                    <header class="panel-heading" style="font-size:250%">
                        Add Rewards
                    </header>
                    <div class="panel-body">
                        <form class="form-horizontal " method="get">
                        
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">User ID</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="">
                                </div>
                            </div>
                     
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Completion Time</label>
                                <div class="col-sm-10">
                                    <input type="datetime-local" id="birthdaytime" name="birthdaytime">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Rewards ID</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Shipping Address</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="">
                                </div>
                            </div>



                        </form>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                               
                                <button class="btn-success" style="text-align:center;margin-left: 70px;" type="button">Add</button>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>
</div>
