@model IEnumerable<DataLibrary.Models.claim_rewards_records>


@{
    ViewBag.Title = "ViewClaimRecords";
}

<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
<link href="~/Assets/css/styles2.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>


<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-3">Rewards</h1>
                <ol class="breadcrumb mb-4"></ol>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        View Claims Records
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>AppointmentID</th>
                                    <th>CompletionTime</th>
                                    <th>RewardID</th>
                                    <th>ClaimTime</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppointmentID)
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy hh:mm tt}", item.CompletionTime))
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.RewardID)
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy hh:mm tt}", item.ClaimTime))
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>

    </div>
</div>
<!-- /.card -->
<!-- /.container-fluid -->
<!-- jQuery -->
<script src="~/Assets/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

