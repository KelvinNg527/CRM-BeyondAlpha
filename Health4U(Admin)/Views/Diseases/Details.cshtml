@model DataLibrary.Models.Diseases

@{
    ViewBag.Title = "AddDisease";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>


@using (Html.BeginForm("AddDisease", "Diseases", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            Disease Details
                        </header>
                        <br />

                        <picture style="margin-left:350px">
                            <img src="data:image;base64,@Convert.ToBase64String(Model.Image1)" width="200" height="200" />
                        </picture>
                        <picture style="margin-left:50px">
                            <img src="data:image;base64,@Convert.ToBase64String(Model.Image2)" width="200" height="200" />
                        </picture>

                        <div class="panel-body">

                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Disease ID</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.DiseaseID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Disease Name</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Treatment</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Treatment, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Causes</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Causes, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Symptons</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Symptoms, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>

                            </form>
                            <div class="form-group">
                                <br />
                                <div class="col-lg-offset-2 col-lg-10">


                                    <input type="button" class="btn btn-outline-dark" style="margin-left:400px" value="Edit"
                                           onclick="location.href='@Url.Action("UpdateDisease", "Diseases", routeValues: new { id = ViewBag.id })'" />

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
