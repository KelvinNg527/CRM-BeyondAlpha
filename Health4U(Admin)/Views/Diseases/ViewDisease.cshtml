@model IEnumerable<DataLibrary.Models.Diseases>

@{
    ViewBag.Title = "ViewDisease";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/Assets/pluggin/fontawesome-free/css/all.min.css">


<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <div class="container-fluid px-4">
            <h1 class="mt-3">Disease</h1>
            <ol class="breadcrumb mb-4"></ol>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    View Disease
                </div>
                <div class="card-body">
                    <main>

                        <!-- /.card -->
                        <div class="card">

                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>DiseaseID</th>
                                            <th>Description</th>
                                            <th>Treatment</th>
                                            <th>Causes</th>
                                            <th>Symptoms</th>
                                            <th>Action</th>
                                        </tr>

                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DiseaseID)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Treatment)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Causes)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Symptoms)
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a href="@Url.Action("Details", "Diseases",routeValues: new { id = item.DiseaseID })">
                                                            <button type="button" class="btn btn-outline-dark">
                                                                <span class="fa fa-edit"></span>
                                                            </button>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </main>
                </div>
            </div>
            <!-- /.card -->
            <!-- /.container-fluid -->
            <!-- jQuery -->
            <script src="~/Assets/plugins/jquery/jquery.min.js"></script>
            <!-- Bootstrap 4 -->
            <script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- AdminLTE App -->
            <!-- AdminLTE for demo purposes -->
            <!-- Page specific script -->
            <script>
                $(function () {
                    $("#example1").DataTable({
                        "responsive": true, "lengthChange": false, "autoWidth": false,
                        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
                    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
                    $('#example2').DataTable({
                        "paging": true,
                        "lengthChange": false,
                        "searching": false,
                        "ordering": true,
                        "info": true,
                        "autoWidth": false,
                        "responsive": true,
                    });
                });
            </script>

        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>

