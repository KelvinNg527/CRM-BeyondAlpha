@model DataLibrary.Models.ActivityModel

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@using (Html.BeginForm("Details", "Activity", FormMethod.Post))
{
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            Blood Donation Activity Event Details
                        </header>
                        <br />
                        <div class="panel-body">

                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Event ID</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.EventID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Start Date & Time</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.EventStartDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">End Date & Time</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.EventEndDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Corporate Name</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Venue</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.Venue, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Country</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Approved ?</label>
                                    <div class="col-sm-10">
                                        <input type="radio" value="Y" name="selection" checked />YES
                                        <input type="radio" value="N" name="selection" />NO
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Remark</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Note, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>


                            </form>
                            <div class="form-group">
                                <br />
                                <div class="col-lg-offset-2 col-lg-10">

                                    <button type="submit" class="btn btn-primary">Update</button>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
