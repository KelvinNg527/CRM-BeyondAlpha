
@{
    ViewBag.Title = "Details";
}
<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <section class="panel">
                    <header class="panel-heading" style="font-size:250%">
                        Billing Details
                    </header>
                    <div class="panel-body">
                        <form class="form-horizontal " method="get">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Bill ID</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="A0199">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Corporate Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="Hospital Taman Desan">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Bill Date</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="10/10/2019">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Package</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="Gold">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">SubscribeMonth</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="3">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">AdminID</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="A1050">
                                </div>
                            </div>



                        </form>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Edit</button>
                                <button class="btn btn-danger" style="text-align:center;margin-left: 70px;" type="button">Cancel</button>
                                <button class="btn btn-success" style="text-align:center;margin-left: 70px;" type="button">@Html.ActionLink("Print","Invoices", "Billing")</button>

                            </div>
                        </div>
                    </div>
                </section>
                </div>
            </main>
        </div>
    </div>
