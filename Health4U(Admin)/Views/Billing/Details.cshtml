}
<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <section class="panel">
                    <header class="panel-heading" style="font-size:250%">
                        Billing Details
                    </header>
                    <div class="panel-body">
                        <form class="form-horizontal " method="get">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">User ID</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="999">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">User Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="Cheong Ai Yan">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Corporate Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="Hospital Taman Desa">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Medicine Code</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="MC0001">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Quantity</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="3">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Price</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top: 12px;">Total</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="focusedInput" type="text" value="150">
                                </div>
                            </div>


                        </form>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Edit</button>
                                <button class="btn btn-danger" style="text-align:center;margin-left: 70px;" type="button">Cancel</button>
                                <button class="btn btn-outline-success" style="text-align:center;margin-left: 70px;" type="button">Print</button>

                            </div>
                        </div>
                    </div>
                </section>
                </div>
            </main>
        </div>
