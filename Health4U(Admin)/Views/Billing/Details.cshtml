@model DataLibrary.Models.Billings

@{
    ViewBag.Title = "Details";
    var id = Model.BillID;

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:230%">
                            @Html.HiddenFor(model => model.BillID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DisplayFor(model => model.BillID, new { htmlAttributes = new { @class = "form-control" } })

                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="get">
                           
                                <div class="form-group">

                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Corporate ID</label>
                                    <div class="col-sm-2">
                                        @Html.EditorFor(model => model.CorporateID, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-2">
                                        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Bill Date</label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.BillDate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">AdminID</label>
                                    <div class="col-sm-2">
                                        @Html.EditorFor(model => model.AdminID, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">PackageID</label>
                                    <div class="col-sm-2">
                                        @Html.EditorFor(model => model.PackageID, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">SubscribeMonth</label>
                                    <div class="col-sm-2">
                                        @Html.EditorFor(model => model.SubscribeMonth, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Total</label>
                                    <div class="col-sm-4">
                                        @Html.HiddenFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.DisplayFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>





                            </form>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <br />
                                    <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Edit</button>
                                    <button class="btn btn-danger" style="text-align:center;margin-left: 70px;" type="button">Cancel</button>
                                    <button class="btn btn-success" style="text-align:center;margin-left: 70px;" type="button"> @Html.ActionLink("Print", "Invoices", "Billing",routeValues: new
                                                                                                                           { id = Model.BillID  },  htmlAttributes: null)</button>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
