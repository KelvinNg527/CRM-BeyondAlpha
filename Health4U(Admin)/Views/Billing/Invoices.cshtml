@model DataLibrary.Models.Billings

@{
    Layout = null;
}
<style>
    .line {
        width: 11200px;
        height: 47px;
        border-bottom: 1px solid black;
        position: absolute;
    }
</style>

<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/Assets/plugins/fontawesome-free/css/all.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/Assets/css/adminlte.min.css" s>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class="wrapper">
            
            <div id="layoutSidenav">

                <div id="layoutSidenav_content">
                    <main>
                        
                        <div class="container-fluid px-4">
                            <section class="panel">
                                <header class="panel-heading" style="font-size:250%">
                                    <b>INVOICE</b><br>
                                    <br>

                                </header>
                                <div class="panel-body">
                                    <!-- title row -->
                                    <div class="row">
                                        <div class="col-sm-4 invoice-col">
                                            From
                                            <address>
                                                <strong>Health4 U.Inc</strong><br>
                                                795 Folsom Ave, Suite 600<br>
                                                San Francisco, CA 94107<br>
                                                <div class="line"></div>

                                                Phone: 6011-112345324<br>


                                            </address>
                                        </div>
                                        <div class="col-sm-8 invoice-col" style="padding-left:39em">
                                            <br>
                                            <b></b><br>
                                            <br>
                                            <b>Bill ID:</b> @Html.DisplayFor(model => model.BillID)
                                            <br>
                                            <b>Bill Date:</b>@Html.DisplayFor(model => model.BillDate)
                                            <br>
                                            <b>Admin ID:</b>  @Html.DisplayFor(model => model.AdminID)
                                            <br>

                                        </div>

                                        <!-- /.col -->
                                    </div>
                                </div>
                                <!-- info row -->
                                <div class="row invoice-info">
                                    <div class="col-sm-4 invoice-col">
                                        To
                                        <address>
                                            <strong> @Html.DisplayFor(model => model.Name)</strong><br>
                                            @Html.EncodedReplace(Model.Address, "[\n\r]+", "<br />")



                                            <br>
                                            <b>Phone:</b>  @Html.DisplayFor(model => model.TelephoneNo)
                                        </address>
                                        <br />

                                    </div>
                                    <!-- /.col -->
                                    <!-- /.col -->
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                                <!-- Table row -->
                                <div class="row">
                                    <div class="col-12 table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>No</th>
                                                    <th>Product</th>
                                                    <th>SubscribeMonth</th>
                                                    <th>PricePerMonth</th>
                                                    <th>Total (RM)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(model => model.BillID)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.PackageName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.SubscribeMonth)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.PricePerMonth)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.Total)
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <!-- accepted payments column -->
                                    <div class="col-6">
                                        <p class="lead">Payment Methods:</p>
                                        <img src="~/Assets/img/credit/visa.png" alt="Visa">
                                        <img src="~/Assets/img/credit/mastercard.png" alt="Mastercard">
                                        <img src="~/Assets/img/credit/american-express.png" alt="American Express">
                                        <img src="~/Assets/img/credit/paypal2.png" alt="Paypal">


                                    </div>
                                    <!-- /.col -->
                                    <div class="col-6">

                                        <div class="table-responsive">
                                            <table class="table">
                                                <tr>
                                                    <th style="width:65%">Subtotal:</th>
                                                    <td>
                                                        @Html.DisplayFor(model => model.Total)
                                                    </td>
                                                </tr>
                                               
                                                <tr>
                                                    <th>Tax (5%)</th>
                                                    <td>60</td>
                                                </tr>

                                                <tr>
                                                    <th>Total:</th>
                                                    <td>1260</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </section>

                        </div>
                    </main>
                </div>
            </div>
        </section>
    </section>
}
<script>
    window.addEventListener("load", window.print());
</script>