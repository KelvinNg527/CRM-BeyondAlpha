@model DataLibrary.Models.Corporate



<script src="~/Scripts/jquery-1.10.2.min.js"></script>


@using (Html.BeginForm("AddCorporate", "Diseases", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            Corporate Details
                        </header>
                        <br />

                        <picture style="margin-left:350px">
                            <img src="data:image;base64,@Convert.ToBase64String(Model.image)" width="200" height="200" />
                        </picture>
                   

                        <div class="panel-body">

                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Corporate ID</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.CorporateID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Name</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Address</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">TelephoneNo</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.TelephoneNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">FaxNo</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.FaxNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">isActive</label>
                                    <div class="col-sm-10">
                                        @if (Model.isActive = true)
                                        {
                                            <div class="col-sm-10">

                                                @Html.TextBoxFor(model => model.isActive, new { htmlAttributes = new { @class = "form-control", @Value = "True", @readonly = "readonly" } })
                                            </div>
                                        }

                                        else
                                        {
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.isActive, new { htmlAttributes = new { @class = "form-control", @Value = "False", @readonly = "readonly" }})
                                           </div>
                                                }
                                      </div>
                                        </div>
                            

                            </form>
                            <div class="form-group">
                                <br />
                                <div class="col-lg-offset-2 col-lg-10">


                                    <input type="button" class="btn btn-outline-dark" style="margin-left:400px" value="Edit"
                                           onclick="location.href='@Url.Action("UpdateCorporate", "Corporate", routeValues: new { id = Model.CorporateID })'" />

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
