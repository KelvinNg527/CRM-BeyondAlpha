@model DataLibrary.Models.Corporate
@{
    ViewBag.Title = "AddCorporate";
}
<title>@ViewBag.Title</title>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDX7j1S56AuS0H7Pk65yM6croFu5mjuS8Y&libraries=places"></script>


<script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', intilize);
    function intilize() {
        var autocomplete = new google.maps.places.Autocomplete(document.getElementById("txtautocomplete"));

        google.maps.event.addListener(autocomplete, 'place_changed', function () {

            var place = autocomplete.getPlace();
            var location = "Address: " + place.formatted_address + "<br/>";
            location += "Latitude: " + place.geometry.location.lat() + "<br/>";
            location += "Longitude: " + place.geometry.location.lng();
            document.getElementById('lblresult').innerHTML = location
            Add = place.formatted_address;
            La = place.geometry.location.lat();
            Lng = place.geometry.location.lng();
            $('#Address').val(Add);
            $('#Latitude').val(La);
            $('#Longitude').val(Lng);

        });

    };

</script>


<script type="text/javascript">

    function validateData() {
        if ($("#Name").val() == "") {
            swal("Name  cannot be null!");
            return false;
        } else if ($("#TelephoneNo").val() == "") {
            swal("TelephoneNo cannot be null!");
            return false;
        } else {
            return true;
        }
    }

    function Validate(ctl, event) {
        event.preventDefault();
        swal({
            title: "Do you want to add a Corporate?",
            text: "Please check information before adding !",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#008000",
            confirmButtonText: "Add",
            cancelButtonText: "Cancel",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    if (validateData() == true) {
                        $("#CreateForm").submit();
                    }
                } else {
                    swal("Cancelled", "You have Cancelled an adding action!", "error");
                }
            });
    }
</script>

@using (Html.BeginForm("AddCorporate", "Corporate", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateForm" }))
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            Add Corporate
                        </header>
                        <div class="panel-body">
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(m => m.Name, new { @style = "width:522px" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.isHospital, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-top:26px" })
                                <div class="col-md-10">
                                    @Html.RadioButtonFor(model => model.isHospital, true)True
                                    <br />
                                    @Html.RadioButtonFor(model => model.isHospital, false)False
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">

                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    <input type="text" id="txtautocomplete" style="width:522px" placeholder="Enter the Location" />
                                    <br />
                                    <input type="hidden" name="Address" id="Address" />
                                    <input type="hidden" name="Latitude" id="Latitude" />
                                    <input type="hidden" name="Longitude" id="Longitude" />
                                    <label id="lblresult"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    <input type="file" name="file" id="file" style="width: 25%;" />
                                    <br />
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.TelephoneNo, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(m => m.TelephoneNo, new { @style = "width:522px" })
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.FaxNo, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(m => m.FaxNo, new { @style = "width:522px" })
                                </div>
                            </div>


                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" id="CreateForm" type="submit"
                                        onclick="Validate(this, event);"
                                        style="text-align:center;margin-left:310px;margin-top:30px">
                                    Confirm
                                </button>
                                <button class="btn btn-danger" style="text-align:center;margin-left: 50px;margin-top:30px" type="reset">Reset</button>
                            </div>
                        </div>
                    </section>

                </div>

            </main>
        </div>
    </div>
}

