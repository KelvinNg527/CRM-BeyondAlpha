@model DataLibrary.Models.Corporate

@{
    ViewBag.Title = "UpdateCorporate";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD-LXYtQikeOSJJa_XM1D8GbiVBCmyVlJc&libraries=places"></script>


<script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', intilize);
    function intilize() {
        var autocomplete = new google.maps.places.Autocomplete(document.getElementById("txtautocomplete"));
        google.maps.event.addListener(autocomplete, 'place_changed', function () {
            var place = autocomplete.getPlace();
            var location = "Address: " + place.formatted_address + "<br/>";
            location += "Latitude: " + place.geometry.location.lat() + "<br/>";
            location += "Longitude: " + place.geometry.location.lng();
            document.getElementById('lblresult').innerHTML = location
            Add = place.formatted_address;
            La = place.geometry.location.lat();
            Lng = place.geometry.location.lng();
            $('#Address').val(Add);
            $('#Latitude').val(La);
            $('#Longitude').val(Lng);

        });

    };

</script>

<script type="text/javascript">

    function validateData() {
        if ($("#Name").val() == "") {
            swal("Disease  cannot be null!");
            return false;
        } else if ($("#TelephoneNo").val() == "") {
            swal("Treatment cannot be null!");
            return false;
        } else {
            return true;
        }

    }

    function Validate(ctl, event) {
        event.preventDefault();
        swal({
            title: "Do you want to edit Corporate?",
            text: "Please check information before editing !",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#008000",
            confirmButtonText: "Edit",
            cancelButtonText: "Cancel",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    if (validateData() == true) {
                        $("#CreateForm").submit();
                    }
                } else {
                    swal("Cancelled", "You have Cancelled an editing action!", "error");
                }
            });
    }
</script>

@using (Html.BeginForm("UpdateCorporate", "Corporate", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateForm" }))
{
    @Html.AntiForgeryToken()
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            Edit Corporate
                        </header>
                        <div class="panel-body">
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.HiddenFor(model => model.CorporateID)
                                    @Html.LabelFor(model => model.CorporateID, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(m => m.CorporateID, new { @style = "width:222px", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-14">
                                    @Html.TextBoxFor(m => m.Name, new { @style = "width:222px" })
                                </div>
                            </div>
                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-14">
                                    @Html.TextBoxFor(m => m.Address, new { @id = "txtautocomplete", @style = "width:222px" })
                                    <br />
                                    <input type="hidden" name="Address" id="Address" />
                                    <input type="hidden" name="Latitude" id="Latitude" />
                                    <input type="hidden" name="Longitude" id="Longitude" />
                                    <label id="lblresult"></label>
                                    @*<input type="text" style="width:222px" id="txtautocomplete"value=@Model.Address>*@
                                    @*<input type="text" id="txtautocomplete" style="width:522px" placeholder="Enter the Location" />*@
                                    @*@Html.TextBoxFor(m => m.Address, new { @style = "width:222px" })*@
                                </div>
                            </div>

                            <div class="form-group">
                                <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                    @Html.LabelFor(model => model.TelephoneNo, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                </a>
                                <div class="col-lg-14">
                                    @Html.TextBoxFor(m => m.TelephoneNo, new { @style = "width:222px" })
                                </div>
                            </div>
                            <div class="panel">
                                <div class="form-group">
                                    <a style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:15px">
                                        @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-lg-2", @style = "margin-top:26px" })
                                    </a>
                                    <div class="col-lg-10">
                                        <input type="file" name="file" id="file" style="width: 25%;" />
                                        <br />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;">Is Active</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(m => m.isActive, new List<SelectListItem>
                        { new SelectListItem{Text="True", Value="true"},
                                new SelectListItem{Text="False", Value="false"}})
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-primary" id="CreateForm" type="submit"
                                            onclick="Validate(this, event);"
                                            style="text-align:center;margin-left:310px;margin-top:30px">
                                        Save
                                    </button>
                                    <button class="btn btn-danger" style="text-align:center;margin-left: 50px;margin-top:30px" type="reset">Reset</button>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
