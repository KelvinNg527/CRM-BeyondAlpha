@model IEnumerable<DataLibrary.Models.Corporate>



<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/Assets/pluggin/fontawesome-free/css/all.min.css">


<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <div class="container-fluid px-4">
            <h1 class="mt-3">Corporate</h1>
            <ol class="breadcrumb mb-4"></ol>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    View Corporate
                </div>
                <div class="card-body">
                    <main>

                        <!-- /.card -->
                        <div class="card">

                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>CorporateID</th>
                                            <th>Name</th>
                                            <th>TelephoneNo</th>
                                            <th>FaxNo</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>

                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CorporateID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TelephoneNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FaxNo)
                                            </td>
                                            <td>
                                                @if (item.isActive == true)
                                                {
                                                    @Html.Encode("True")
                                                }
                                                @if (item.isActive == false)
                                                {
                                                    @Html.Encode("False")
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", "Corporate",routeValues: new { id = item.CorporateID })">
                                                        <button type="button" class="btn btn-outline-dark">
                                                            <span class="fa fa-edit"></span>
                                                        </button>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </main>
                </div>
            </div>
            <!-- /.card -->
            <!-- /.container-fluid -->
            <!-- jQuery -->
            <script src="~/Assets/plugins/jquery/jquery.min.js"></script>
            <!-- Bootstrap 4 -->
            <script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- AdminLTE App -->
            <!-- AdminLTE for demo purposes -->
            <!-- Page specific script -->
            <script>
                $(function () {
                    $("#example1").DataTable({
                        "responsive": true, "lengthChange": false, "autoWidth": false,
                        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
                    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
                    $('#example2').DataTable({
                        "paging": true,
                        "lengthChange": false,
                        "searching": false,
                        "ordering": true,
                        "info": true,
                        "autoWidth": false,
                        "responsive": true,
                    });
                });
            </script>

        </div>
    </div>
</div>


