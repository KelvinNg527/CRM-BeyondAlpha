@model DataLibrary.Models.Email


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

@using (Html.BeginForm("EditDetails", "Email", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <section class="panel">
                        <header class="panel-heading" style="font-size:250%">
                            @Html.DisplayFor(model => model.email_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.HiddenFor(model => model.email_ID)
                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="get">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Email Name</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.email_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Email Subject</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.email_subject, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Send From</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(model => model.email_AddressFrom, (SelectList)ViewBag.UserList, new { @class = "form-control chosen-select", style = "width: 522px;" })


                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Send To</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(model => model.email_AddressTo, (SelectList)ViewBag.UserList, new { @class = "form-control chosen-select", style = "width: 522px;" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">Content</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.email_Text, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">isSend</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.isSend, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <br />
                                    <br />
                                </div>

                                @*@if (Model.isSend = true)
                                {
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">isSend</label>
                                        <div class="col-sm-10">

                                            @Html.TextBoxFor(model => model.isSend, new { htmlAttributes = new { @class = "form-control", @Value = "True", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" style="margin-top: 12px;text-decoration-line:underline">isSend</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(model => model.isSend, new { htmlAttributes = new { @class = "form-control", @Value = "False", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                }*@

                         
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <input type="button" class="btn btn-secondary" value="Edit" style="margin-left: 340px;"
                                                   onclick="location.href='@Url.Action("Details", "Email", routeValues: new { id =Model.email_ID})'" />
                                            <button class="btn btn-dark" style="text-align:center;margin-left: 400px;" type="submit">Send</button>
                                        </div>
                                    </div>
                                
        
                            </form>

                        </div>
                    </section>
                </div>
            </main>
        </div>
    </div>
}
